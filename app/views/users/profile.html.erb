<%= flash.now[:error] %>

<h1>Welcome back, <%= @user.username %>!</h1>

<div class="profile">
  <h3>Ready to play? Click Join Game!</h3>
  <br>
  <br>
    <%= link_to 'Join Game', join_game_path, method: 'POST' %>
  <br>
  <div class="user_stats">
    <h3>Your Stats</h3>
    <h3>Wins:<%= @wins %></h3>
    <h3>Losses:<%= @losses %></h3>
    <h3>Win-Loss Ratio:<%= @ratio %></h3>
    <ol>
    <h3>Your Last 3 Games:</h3>
    <% @user.last_3_games.each do |game| %>
    <li><%= User.find(game.player_one_id).username %> VS. <%= User.find(game.player_two_id).username %></li>
    <% end %>
  </ol>
  </div>
</div>

